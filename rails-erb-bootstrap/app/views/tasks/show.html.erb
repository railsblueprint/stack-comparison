<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <%# Flash messages %>
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><%= @task.title %></h2>
            <div class="d-flex gap-2">
              <% case @task.status %>
              <% when 'done' %>
                <span class="badge bg-success fs-6"><%= @task.status.titleize %></span>
              <% when 'in_progress' %>
                <span class="badge bg-warning text-dark fs-6"><%= @task.status.titleize %></span>
              <% else %>
                <span class="badge bg-light text-dark fs-6"><%= @task.status.titleize %></span>
              <% end %>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <h5 class="text-muted">Priority</h5>
              <% case @task.priority %>
              <% when 'high' %>
                <span class="badge bg-danger fs-5"><%= @task.priority.titleize %></span>
              <% when 'medium' %>
                <span class="badge bg-info text-dark fs-5"><%= @task.priority.titleize %></span>
              <% else %>
                <span class="badge bg-light text-dark fs-5"><%= @task.priority.titleize %></span>
              <% end %>
            </div>

            <div class="col-md-6">
              <h5 class="text-muted">Due Date</h5>
              <p class="fs-5 mb-0">
                <i class="bi bi-calendar-event"></i>
                <%= @task.due_date.strftime('%B %d, %Y') %>
                <% if @task.due_date < Date.today && @task.status != 'done' %>
                  <span class="badge bg-danger ms-2">Overdue</span>
                <% elsif @task.due_date == Date.today && @task.status != 'done' %>
                  <span class="badge bg-warning text-dark ms-2">Due Today</span>
                <% end %>
              </p>
            </div>
          </div>

          <hr>

          <div class="mb-4">
            <h5 class="text-muted">Description</h5>
            <% if @task.description.present? %>
              <p class="lead"><%= @task.description %></p>
            <% else %>
              <p class="text-muted fst-italic">No description provided</p>
            <% end %>
          </div>

          <hr>

          <div class="row mb-3">
            <div class="col-md-6">
              <small class="text-muted">
                <strong>Created:</strong> <%= @task.created_at.strftime('%B %d, %Y at %I:%M %p') %>
              </small>
            </div>
            <div class="col-md-6">
              <small class="text-muted">
                <strong>Last Updated:</strong> <%= @task.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
              </small>
            </div>
          </div>
        </div>

        <div class="card-footer bg-light">
          <div class="d-flex justify-content-between">
            <%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-outline-secondary' %>
            <div class="btn-group">
              <%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary' %>
              <%= link_to 'Delete Task', task_path(@task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
