<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="bg-blue-600 text-white px-6 py-4">
      <h2 class="text-2xl font-bold">Edit Task</h2>
    </div>

    <div class="p-6">
      <%= render 'form', task: @task %>
    </div>

    <div class="bg-gray-50 px-6 py-4 flex justify-between">
      <%= link_to 'Back to Task', task_path(@task), class: 'bg-white hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 border border-gray-300 rounded-md transition' %>
      <%= link_to 'Delete Task', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition' %>
    </div>
  </div>
</div>
